# -------- Étape 1 : Build --------
FROM node:18-alpine AS builder

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .
RUN npm run build

# -------- Étape 2 : Run --------
FROM node:18-alpine AS runner

WORKDIR /app

COPY package*.json ./
RUN npm ci --only=production

COPY --from=builder /app ./dist

EXPOSE 3000 4000 5000

RUN adduser -S nodejs
USER nodejs

# Lancer l’appli
CMD ["node", "dist/server.js"]
